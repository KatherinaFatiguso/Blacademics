<%= simple_form_for(@organisation) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :department %>
    <%= f.input :street_address_1 %>
    <%= f.input :street_address_2 %>
    <%= f.input :suburb %>
    <%= f.input :state, collection: ['NSW', 'ACT', 'VIC', 'QLD', 'SA', 'NT', 'TAS'] %>
    <%= f.input :postcode %>
    <%= f.input :contact_name %>
    <%= f.input :contact_email %>
    <%= f.input :contact_phone %>
    <%= f.input :website, label: 'Website Address starting with www.' %>
    <%= f.input :logo %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %><!-- end of simple form -->
