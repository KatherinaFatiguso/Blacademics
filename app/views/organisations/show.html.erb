<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>Logo:</strong>
        <div id="logo">
          <%= @organisation.logo %>
        </div>
      </p>

      <div class="btn-group-vertical" role="group" aria-label="...">
        <button type="button" class="btn btn-default active"><a href="#org-profile">Organisation profile</a></button>
        <button type="button" class="btn btn-default"><a href="#programs">Progams</a></button>
        <button type="button" class="btn btn-default"><a href="#events">Events</a></button>
        <button type="button" class="btn btn-default"><a href="#jobs">Jobs</a></button>
        <button type="button" class="btn btn-default"><a href="#messages">Messages</a></button>
        <button type="button" class="btn btn-default"><a href="#users">Users (Organisation)</a></button>
      </div>

    </div>
    <div class="col-md-8">
      <div id="org-profile">
      <p>
        <strong>Name:</strong>
        <%= @organisation.name %>
      </p>

      <p>
        <strong>University:</strong>
        <%= @organisation.university %>
      </p>

      <p>
        <strong>Street address 1:</strong>
        <%= @organisation.street_address_1 %>
      </p>

      <p>
        <strong>Street address 2:</strong>
        <%= @organisation.street_address_2 %>
      </p>

      <p>
        <strong>Suburb:</strong>
        <%= @organisation.suburb %>
      </p>

      <p>
        <strong>State:</strong>
        <%= @organisation.state %>
      </p>

      <p>
        <strong>Postcode:</strong>
        <%= @organisation.postcode %>
      </p>

      <p>
        <strong>Contact name:</strong>
        <%= @organisation.contact_name %>
      </p>

      <p>
        <strong>Contact email:</strong>
        <%= @organisation.contact_email %>
      </p>

      <p>
        <strong>Contact phone:</strong>
        <%= @organisation.contact_phone %>
      </p>

      <p>
        <strong>Website:</strong>
        <%= @organisation.website %>
      </p>

      <%= link_to 'Edit', edit_organisation_path(@organisation) %> |
      <%= link_to 'Back', organisations_path %>
      <br><br>
    </div> <!-- end of org-profile -->

    <div id="events">
      <p>
        <strong>List of My Events:</strong>

        <% @organisation.events.each do |event| %>
        <table class="table">
          <tr>
            <td>
              <p><%= link_to event.title, event_path(event) %></p>
              <p><%= event.tagline %></p>
              <p><%= link_to "Edit | ", edit_event_path(event) %>
                <%= link_to "Delete", event_path(event), method: :delete, data: { confirm: 'Are you sure?'} %>
              </p>
            </td>
          </tr>
        </table>
        <% end %>
      </p>
      <p><%= link_to "Add Event", new_event_path(organisation_id: @organisation.id) %><p>
      <br>
    </div> <!-- end of programs -->

    </div> <!-- end of col-md-8 -->
  </div> <!-- end of row-->
</div> <!-- end of containter-fluid -->
