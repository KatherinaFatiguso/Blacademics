<%= simple_form_for(@internship) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { maxlength: 80 } %>
    <%= f.input :organisation, input_html: { maxlength: 80 } %>
    <%= f.input :year_commenced, input_html: { maxlength: 4 } %>
    <%= f.input :year_ended, input_html: { maxlength: 4 } %>
    <% if params[:student_profile_id] %>
      <%= f.input :student_profile_id, :as => :hidden, input_html: { value: params[:student_profile_id]} %>
      <!-- Use the :input_html option  to pass any html attribute (:student_profile_id) straight to the input -->
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
