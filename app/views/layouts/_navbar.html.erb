  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo center">Logo</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "Admin", admin_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        <% unless user_signed_in? %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% else %>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">My Account<i class="material-icons right">arrow_drop_down</i></a></li>
        <% end %>      <!-- dropdown trigger -->
      </ul>
    </div>
  </nav>
  <!-- dropdown structure -->
  <ul id="dropdown1" class="dropdown-content">
    <% if user_signed_in? %>
      <% if current_user.has_role? :student %>
        <% if current_user.student_profile %>
          <li><%= link_to 'My Profile', student_profile_path(current_user.student_profile)%></li>
        <% else %>
          <li><%= link_to 'Create Your Own Profile', new_student_profile_path %></li>
        <% end %>
      <% elsif current_user.has_role? :organisation %>
        <% if current_user.organisation.nil? %>
          <li><%= link_to 'Create Your Organisation', new_organisation_path %></li>
        <% else %>
          <li><%= link_to current_user.organisation.name, organisation_path(current_user.organisation) %></li>
        <% end %>
      <% end %>
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
    <% end %>
  </ul>
