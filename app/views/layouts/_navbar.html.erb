<!-- Dropdown Structure 1 THIS IS FOR THE FULL SCREEN-->
<ul id="dropdown1" class="dropdown-content">
  <% if user_signed_in? %>
    <% if current_user.has_role? :student %>
      <% if current_user.student_profile %>
        <li><%= link_to 'My Profile', student_profile_path(current_user.student_profile)%></li>
      <% else %>
        <li><%= link_to 'Create Your Own Profile', new_student_profile_path %></li>
      <% end %>
    <% elsif current_user.has_role? :organisation %>
      <% if current_user.organisation.nil? %>
        <li><%= link_to 'Create Your Organisation', new_organisation_path %></li>
      <% else %>
        <li><%= link_to current_user.organisation.company_name, organisation_path(current_user.organisation) %></li>
      <% end %>
    <% end %>
      <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
  <% end %>
</ul>

