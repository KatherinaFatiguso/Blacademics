<div class="main-pattern">
  <div class="container white-bg">
    <div class="row">
      <div class="col s12">
        <h3>All Jobs</h3>
        <%= form_tag(pages_approved_jobs_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search for State, Suburb or Postcode"%>

          <button class="btn waves-effect waves-light" type="submit" name="commit" value="Search">SEARCH</button>
        <% end %>

        <% if @jobs.present? %>
          <%= paginate @jobs %>
          <% @jobs.each do |job| %>
            <ul class="collection">
              <li class="collection-item avatar">
                <img src=<%=job.image_url%> alt="" class="circle">
                <a href="/listings/<%=job.id%>">
                <span class="title"><%=job.title%></span>
                <p><%=job.short_description%></p>
                </a>
                <div class="secondary-content"><i class="material-icons">grade</i></div>
              </li>
            </ul>
          <% end %>
          <%= paginate @jobs %>
        <% else %>
            <p>There are no jobs located in <%= params[:search] %>.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
