<div class="row">
  <div class="col s2">.</div><!-- do not remove the dot . -->
  <div class="col s7">
    <div class="white-text"><h3>All Jobs</h3>
        <%= form_tag(pages_approved_jobs_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search State or Suburb or Postcode"%>
        <button class="btn waves-effect waves-light" type="submit" name="commit" value="Search">SEARCH</button>
      <% end %>
      <% if @jobs.present? %>
        <%= render @jobs %>
      <% else %>
        <p>There are no listings located in <%= params[:search] %>.</p>
      <% end %>
    </div><!-- end white text -->
  </div>
</div>
