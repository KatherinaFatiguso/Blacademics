<div class="main-pattern">
  <div class="container white-bg">
    <div class="row">
      <div class="col s12">
        <h4>All Events</h4>
        <%= form_tag(pages_approved_events_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search for State, Suburb or Postcode"%>
          <button class="btn waves-effect waves-light palette4-bg" type="submit" name="commit" value="Search">SEARCH</button>
        <% end %>

        <% if @events.present? %>
        <%= paginate @events %>
          <% @events.each do |event| %>
            <ul class="collection">
              <li class="collection-item avatar">
                <img src=<%=event.image_url%> alt="" class="circle">
                <a href="/listings/<%=event.id%>">
                <span class="title"><%=event.title%></span>
                <p><%=event.short_description%></p>
                </a>
                <div class="secondary-content"><i class="material-icons">grade</i></div>
              </li>
            </ul>
          <% end %>
          <%= paginate @events %>
        <% else %>
            <p>There are no events located in <%= params[:search] %>.</p>
        <% end %>
      </div><!-- end of col 12 -->
    </div><!-- end of row -->
  </div><!-- end of container white-bg -->
</div><!-- end of home-bg -->
