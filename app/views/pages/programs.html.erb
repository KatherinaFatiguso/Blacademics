<% if user_signed_in? %>
  <% if current_user.has_role? :admin%>
    <%= render 'layouts/sidebar' %>
    <div class="row">
      <div class="col s3">.</div><!-- do not remove the dot . -->
      <div class="col s7">
        <div class="white-text"><h3>Listing of Programs</h3></div>
