  <% if current_user.has_role? :admin %>
    <%= render 'layouts/sidebar' %>
      <div class='margin-left'>
        <h3>Listing of Events</h3>
          <%= link_to 'Draft', pages_events_path(filter: 'draft'), class: "waves-effect waves-light btn" %>
