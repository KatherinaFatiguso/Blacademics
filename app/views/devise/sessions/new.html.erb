<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <h3>Log in</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>

        <div class="input boolean optional user_remember_me"><input class="boolean optional" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" type="hidden" /><label class="boolean optional checkbox" for="user_remember_me">Remember me</label></div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
