<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :description %>
    <%= f.input :category, collection: ['NSW', 'ACT', 'VIC', 'QLD', 'SA', 'NT', 'TAS'] %>
    <%= f.input :location %>
    <%= f.input :work_type, collection: ['full time', 'part time', 'casual', 'contract'] %>
    <%= f.input :salary %>
    <%= f.input :organisation_id, as: :hidden, input_html: { value: params[:org]} %>
      <!-- <ul class="collection">
        <% current_user.organisations.each do |organisation| %>
           <li class="collection-item"><%= organisation.id %></li>
        <% end %>
      </ul> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
