<h1>Listing categories</h1>

<table class="table">
    <tr>
      <th>Highschool</th>
      <th>Undergraduate</th>
      <th>Postgraduate</th>
      <th>Employment</th>
      <th>Community</th>
      <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @categories) do |category| %>
    <td><%= category.highschool %></td>
    <td><%= category.undergraduate %></td>
    <td><%= category.postgraduate %></td>
    <td><%= category.employment %></td>
    <td><%= category.community %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
</div>
