<h1>Listing scholarships</h1>

<table class="table">
    <tr>
      <th>Title</th>
      <th>Organisation</th>
      <th>Year_received</th>
      <th>Student_profile</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @scholarships) do |scholarship| %>
    <td><%= scholarship.title %></td>
    <td><%= scholarship.organisation %></td>
    <td><%= scholarship.year_received %></td>
    <td><%= scholarship.student_profile %></td>
      <td><%= link_to 'Show', scholarship %></td>
    <td><%= link_to 'Edit', edit_scholarship_path(scholarship), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', scholarship, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Scholarship', new_scholarship_path, class: 'btn btn-success' %>
</div>
