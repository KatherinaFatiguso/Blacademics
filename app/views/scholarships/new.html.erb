<% if user_signed_in? %>
  <% if current_user.student_profile.id == params[:student_profile_id].to_i %>
    <div class="row">
      <div class="col s12 m8 offset-m2 l8 offset-l2">
        <p>
          <h4>New Scholarship</h4>
          Max. 80 characters for each label.
        </p>
        <%= render 'form' %>
      </div>
    </div>
  <% else %>
    <%= render "listings/forbidden" %>
  <% end %>
<% end %>
