<% if current_user.organisation.id == @news.organisation_id %>
  <div class="main-pattern">
    <div class="container white-bg">
      <div class="row">
        <div class="col s12">
          <h1>Create News</h1>
          <%= render 'form' %>
          <%= link_to 'Back', news_index_path %>
        </div><!-- end of col s12 -->
      </div><!-- end of row -->
    </div><!-- end of container white-bg -->
  </div><!-- end of main-pattern -->
<% else %>
  <%= render "listings/forbidden" %>
<% end %>
