<p id="notice"><%= notice %></p>

<p>
  <strong>From:</strong>
  <% @from = User.find(@message.from) %>
  <% if @from.user_type == 'student' %>
    <%= @from.student_profile.full_name %>
  <% elsif @from.user_type == 'organisation' %>
    <%= @from.organisation.company_name %>
  <% end %>
</p>

<p>
  <strong>To:</strong>
  <% @from = User.find(@message.to) %>
  <% if @from.user_type == 'student' %>
    <%= @from.student_profile.full_name %>
  <% elsif @from.user_type == 'organisation' %>
    <%= @from.organisation.company_name %>
  <% end %>
</p>

<p>
  <strong>Long message:</strong>
  <%= @message.long_message %>
</p>

<p>
  <strong>Status:</strong>
  <%= @message.status %>
</p>

<p>
  <strong>Attachment:</strong>
  <%= @message.attachment %>
</p>

<p>
  <strong>User:</strong>
  <% if @message.user.user_type == 'student' %>
    <% @contact = @message.user.student_profile %>
    <%= @contact.full_name %>
  <% elsif @message.user.user_type == 'organisation' %>
    <% @contact = @message.user.organisation %>
    <%= @contact.company_name %>
  <% end %>

</p>

<%= link_to 'Back to Messages', pages_conversations_path(contact: @message.to, my_id:@message.from) %>
