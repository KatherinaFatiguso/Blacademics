<p id="notice"><%= notice %></p>

<p>
  <strong>From:</strong>
  <% @from = User.find(@message.from) %>
  <% if @from.user_type == 'student' %>
    <%= @from.student_profile.full_name %>
  <% elsif @from.user_type == 'organisation' %>
    <%= @from.organisation.company_name %>
  <% end %>
</p>

<p>
  <strong>To:</strong>
  <% @from = User.find(@message.to) %>
  <% if @from.user_type == 'student' %>
    <%= @from.student_profile.full_name %>
  <% elsif @from.user_type == 'organisation' %>
    <%= @from.organisation.company_name %>
  <% end %>
</p>

<p>
  <strong>Long message:</strong>
  <%= @message.long_message %>
</p>

<p>
  <strong>Status:</strong>
  <%= @message.status %>
</p>

<p>
  <strong>Attachment:</strong>
  <%= @message.attachment %>
</p>

<% if @from.user_type == 'student' %>
  <%= link_to 'Back to Messages with ' + @from.student_profile.full_name, pages_conversations_path(contact: @message.to, my_id:@message.from) %>
<% elsif @from.user_type == 'organisation' %>
  <%= link_to 'Back to Messages with ' + @from.organisation.company_name, pages_conversations_path(contact: @message.to, my_id:@message.from) %>
<% end %>
