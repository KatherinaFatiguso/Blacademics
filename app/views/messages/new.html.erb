<div class="main-pattern">
  <div class="container white-bg">
    <div class="row">
      <div class="col s12">
        <% User.all.each do |receiver| %>
          <% if receiver.id == (params[:to]).to_i %>
            <% @receiver = receiver %>
          <% end %>
        <% end %>
        <% if @receiver.user_type == 'student'%>
          <h4>Send message to <%= @receiver.student_profile.first_name %></h4>
        <% elsif @receiver.user_type == 'organisation' %>
          <h4>Send message to <%= @receiver.organisation.company_name %></h4>
        <% end %>
        <%= render 'form' %>
        <%= link_to 'Back', messages_path((params[:to]).to_i) %>
      </div>
    </div>
  </div>
</div>
