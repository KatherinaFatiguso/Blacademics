<%= simple_form_for(@student_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :letters %>
    <%= f.input :post_nominal_titles %>
    <%= f.input :profile_pic %>
    <%= f.input :bio, input_html: { maxlength: 1000 } %>
    <!-- 500 words is about 1000 characters -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
