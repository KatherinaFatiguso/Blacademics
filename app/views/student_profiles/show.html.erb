<!-- <p id="notice"><%= notice %></p> don't need this, it will make double notice lines-->

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag(@student_profile.profile_pic_url, size: "300") %>
    </div>
    <div class="col-md-8">
      <div class="text-left">
      <h3><strong><%= @student_profile.title%>. <%= @student_profile.first_name %> <%= @student_profile.last_name %> <%= @student_profile.letters %> <%= @student_profile.post_nominal_titles %></strong></h3>

      <% if current_user.has_role? :student %>
        <p><strong>Email:</strong> <%= @student_profile.user.email %></p>
      <% end %>

      <p><strong>Biography: </strong><%= @student_profile.bio %></p>
      <p><strong>Summary of Work History: </strong><%= @student_profile.work_history %></p>
      <p><%= link_to 'Download Resume', @student_profile.resume_url %>
      <p><%= link_to "Edit Profile", edit_student_profile_path(@student_profile) %></p>
      <br>

      <div class="border-top">
        <p><strong>Education:</strong></p>
      </div>
        <% @student_profile.university_educations.each do |student| %>
          <table class="table">
            <tr>
              <td>Degree: </td>
              <td><%= student.degree %></td>
            </tr>
            <tr>
              <td>Field of Study: </td>
              <td><%= student.field_of_study %></td>
            </tr>
            <tr>
              <td>University: </td>
              <td><%= student.university %></td>
            </tr>
            <tr>
              <td>School: </td>
              <td><%= student.school %></td>
            </tr>
            <tr>
              <td>Year Ended: </td>
              <td><%= student.year_ended %></td>
            </tr>
            </tr>
              <td>
                <%= link_to "Edit | ", edit_university_education_path(student) %>
                <%= link_to "Delete", university_education_path(student), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Education", new_university_education_path(student_profile_id: @student_profile.id) %><p>
        <br>

      <div class="border-top">
        <p><strong>Scholarships:</strong>
      </div>
      </p>
        <% @student_profile.scholarships.each do |scholar| %>
          <table class="table">
            <tr>
              <td>Title: </td>
              <td><%= scholar.title %></td>
            </tr>
            <tr>
              <td>Organisation: </td>
              <td><%= scholar.organisation %></td>
            </tr>
            <tr>
              <td>Year Received: </td>
              <td><%= scholar.year_received %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "Edit | ", edit_scholarship_path(scholar) %>
                <%= link_to "Delete", scholarship_path(scholar), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Scholarship", new_scholarship_path(student_profile_id: @student_profile.id) %></p>
        <br>

      <div class="border-top">
        <p><strong>Awards:</strong></p>
      </div>
        <% @student_profile.awards.each do |aw| %>
          <table class="table">
            <tr>
              <td>Title: </td>
              <td><%= aw.title %></td>
            </tr>
            <tr>
              <td>Organisation: </td>
              <td><%= aw.organisation %></td>
            </tr>
            <tr>
              <td>Year Received: </td>
              <td><%= aw.year_received %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "Edit | ", edit_award_path(aw) %>
                <%= link_to "Delete", award_path(aw), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Award", new_award_path(student_profile_id: @student_profile.id) %></p>
        <br>

      <div class="border-top">
        <p><strong>Internships:</strong></p>
      </div>
        <% @student_profile.internships.each do |intern| %>
          <table class="table">
            <tr>
              <td>Title: </td>
              <td><%= intern.title %></td>
            </tr>
            <tr>
              <td>Organisation: </td>
              <td><%= intern.organisation %></td>
            </tr>
            <tr>
              <td>Year Commenced: </td>
              <td><%= intern.year_commenced %></td>
            </tr>
            <tr>
              <td>Year Ended: </td>
              <td><%= intern.year_ended %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "Edit | ", edit_internship_path(intern) %>
                <%= link_to "Delete", internship_path(intern), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Internship", new_internship_path(student_profile_id: @student_profile.id) %></p>
        <br>

      <div class="border-top">
        <p><strong>Cadetships:</strong></p>
      </div>
        <% @student_profile.cadetships.each do |cad| %>
          <table class="table">
            <tr>
              <td>Title: </td>
              <td><%= cad.title %></td>
            </tr>
            <tr>
              <td>Organisation: </td>
              <td><%= cad.organisation %></td>
            </tr>
            <tr>
              <td>Year Commenced: </td>
              <td><%= cad.year_commenced %></td>
            </tr>
            <tr>
              <td>Year Ended: </td>
              <td><%= cad.year_ended %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "Edit | ", edit_cadetship_path(cad) %>
                <%= link_to "Delete", cadetship_path(cad), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Cadetship", new_cadetship_path(student_profile_id: @student_profile.id) %></p>
        <br>

      <div class="border-top">
        <p><strong>Employments:</strong></p>
      </div>
        <% @student_profile.employments.each do |empl| %>
          <table class="table">
            <tr>
              <td>Title: </td>
              <td><%= empl.title %></td>
            </tr>
            <tr>
              <td>Organisation: </td>
              <td><%= empl.organisation %></td>
            </tr>
            <tr>
              <td>Year Commenced: </td>
              <td><%= empl.year_commenced %></td>
            </tr>
            <tr>
              <td>Year Ended: </td>
              <td><%= empl.year_ended %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "Edit | ", edit_employment_path(empl) %>
                <%= link_to "Delete", employment_path(empl), method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
              <td></td>
            </tr>
          </table>
        <% end %>
        <p><%= link_to "Add Employment", new_employment_path(student_profile_id: @student_profile.id) %></p>
        <br>

      <div class="border-top">
        <p><strong>Skills:</strong> (up to 40 skills)</p>
      </div>
      <% count = 0 %>
        <% @student_profile.skills.each do |s| %>
            <%= count += 1 %>. <%= s.skill %><%= link_to "  Edit | ", edit_skill_path(s) %><%= link_to "Delete", skill_path(s), method: :delete, data: { confirm: 'Are you sure?'} %>
            <br>
        <% end %>
        <% if count < 40 %><!-- max 40 skills -->
          <%= link_to "Add Skill", new_skill_path(student_profile_id: @student_profile.id) %>
        <% end %>
        <br><br>


      </div>
    </div> <!-- end of col-md-8 -->
  </div> <!-- end of row -->
</div> <!-- end of container-fluid -->
