<% if user_signed_in? %>
  <% if current_user.has_role? :admin%>
    <%= render 'layouts/sidebar' %>
    <div class='margin-left'>
    <h3>Listing of Students</h3>
      <table class="bordered responsive-table">
        <tr>
          <th>First_name</th>
          <th>Last_name</th>
          <th>Email</th>
          <th>Profile_pic</th>
            <th colspan="3"></th>
        </tr>
        <%= content_tag_for(:tr, @student_profiles) do |student_profile| %>

            <td><a href="/student_profiles/<%=student_profile.id%>"><%= student_profile.first_name %></a></td>
            <td><a href="/student_profiles/<%=student_profile.id%>"><%= student_profile.last_name %></a></td>
            <td><%= student_profile.user.email %></td>
            <td><a href="/student_profiles/<%=student_profile.id%>"><%= image_tag(student_profile.profile_pic_url, width:100) %></a></td>
            <td><%= link_to 'Edit', edit_student_profile_path(student_profile), class: 'btn btn-edit' %></td>
            <td><%= link_to 'Delete', student_profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
        <% end %>
      </table>
      <div class="form-actions">
        <!-- <%= link_to 'New Student profile', new_student_profile_path, class: 'btn btn-success' %> -->
      </div>
    </div>
  <% end %><!-- end if user has role admin -->
<% end %><!-- end if user has signed in -->
