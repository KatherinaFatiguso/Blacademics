<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, hint: "Max 15 words" %>
    <%= f.input :tagline, hint: "Max 25 words" %>
    <%= f.input :description, hint: "Max 300 words" %>
    <%= f.input :contact_number %>
    <%= f.input :website %>
    <%= f.input :accessibility %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :occurrence, collection: ['Once', 'Overnight', 'Everyday', 'Every week', 'Every fortnight', 'Every month', 'Different days with no schedule'], selected: 'Once' %>
    <%= f.input :location, hint: "Building number, street name, suburb, state, postcode" %>
    <%= f.input :ticket_required, collection: ['Yes', 'No'], selected: 'Yes' %>
    <%= f.input :official_hastag, hint: "e.g. CityOfSydney" %>
    <%= f.input :facebook_url, hint: "Begins with https://www.facebook.com/" %>
    <%= f.input :google_plus_url, hint: "Begins with https://plus.google.com/" %>
    <%= f.input :twitter_username %>
    <%= f.input :instagram_username %>
    <% if params[:organisation_id] %>
    <%= f.input :organisation_id, :as => :hidden, input_html: { value: params[:organisation_id]} %>
      <!-- Use the :input_html option  to pass any html attribute (:organisation_id) straight to the input -->
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
