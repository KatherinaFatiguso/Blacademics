<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Tagline:</strong>
  <%= @event.tagline %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Contact number:</strong>
  <%= @event.contact_number %>
</p>

<p>
  <strong>Website:</strong>
  <%= @event.website %>
</p>

<p>
  <strong>Audiences:</strong>
    <% if @event.audiences.none? %>
      <p><%= link_to "Add Audience", new_audience_path(event_id: @event.id) %></p>
    <% else %>
      <% @event.audiences.each do |audience| %>
        <% if audience.event_id == @event.id %>
          <% if audience.pre_tertiary || audience.uni_prep %>
            <ul>
              <li>Tertiary Preparation</li>
              <ul>
                <% if audience.pre_tertiary %>
                  <li>Pre-Tertiary Program</li>
                <% end %>
                <% if audience.uni_prep %>
                  <li>University Preparatory Program</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if audience.ugrad_direct_access_atar_op || audience.ugrad_indirect_access_pathway || audience.ugrad_indirect_access_enabling || audience.ugrad_indirect_access_indigenous %>
            <ul>
              <li>Undergraduate</li>
              <ul>
                <% if audience.ugrad_direct_access_atar_op %>
                  <li>Direct Access (ATAR or OP)</li>
                <% end %>
                <% if audience.ugrad_indirect_access_pathway %>
                  <li>Indirect Access Pathway Program</li>
                <% end %>
                <% if audience.ugrad_indirect_access_enabling %>
                  <li>Indirect Access Enabling Program</li>
                <% end %>
                <% if audience.ugrad_indirect_access_indigenous %>
                  <li>Indirect Access Indigenous Program</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if audience.masters || audience.honours || audience.phd %>
            <ul>
              <li>Post Graduate</li>
              <ul>
                <% if audience.masters %>
                  <li>Masters</li>
                <% end %>
                <% if audience.honours %>
                  <li>Honours</li>
                <% end %>
                <% if audience.phd %>
                  <li>PhD</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if audience.internship || audience.cadetship || audience.traineeship || audience.job %>
            <ul>
              <li>Employment</li>
              <ul>
                <% if audience.internship %>
                  <li>Internship</li>
                <% end %>
                <% if audience.cadetship %>
                  <li>Cadetship</li>
                <% end %>
                <% if audience.traineeship %>
                  <li>Traineeship</li>
                <% end %>
                <% if audience.job %>
                  <li>Job</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <%= link_to "Edit Audience | ", edit_audience_path(audience) %>
          <%= link_to "Delete Audience", audience_path(audience), method: :delete, data: { confirm: 'Are you sure?'} %>
        <% end %>
      <% end %>
    <% end %>
</p>

<p>
  <strong>Categories:</strong>
    <% if @event.categories.none? %>
      <p><%= link_to "Add Category", new_category_path(event_id: @event.id) %></p>
    <% else %>
      <% @event.categories.each do |category| %>
        <% if category.event_id == @event.id %>
          <% if category.scschool_mentor || category.scschool_tutor || category.scschool_teen || category.scschool_leader || category.scschool_aspiration || category.scschool_enabling || category.scschool_events %>
            <ul>
              <li>Secondary School</li>
              <ul>
                <% if category.scschool_mentor %>
                  <li>Mentoring Programs</li>
                <% end %>
                <% if category.scschool_tutor %>
                  <li>Tutoring/Study Programs</li>
                <% end %>
                <% if category.scschool_teen %>
                  <li>Teen Scholarship</li>
                <% end %>
                <% if category.scschool_leader %>
                  <li>Leaderships Programs</li>
                <% end %>
                <% if category.scschool_aspiration %>
                  <li>Aspirational Programs</li>
                <% end %>
                <% if category.scschool_enabling %>
                  <li>Enabling Programs</li>
                <% end %>
                <% if category.scschool_events %>
                  <li>Events</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if category.uni_enabling || category.uni_aspiration || category.uni_undergrad || category.uni_postgrad || category.uni_uap || category.uni_tutor || category.uni_events %>
            <ul>
              <li>University</li>
              <ul>
                <% if category.uni_enabling %>
                  <li>Enabling Programs</li>
                <% end %>
                <% if category.uni_aspiration %>
                  <li>Aspirational Programs</li>
                <% end %>
                <% if category.uni_undergrad %>
                  <li>Undergraduate Programs</li>
                <% end %>
                <% if category.uni_postgrad %>
                  <li>Postgraduate Programs</li>
                <% end %>
                <% if category.uni_uap %>
                  <li>University Admissions Pathways</li>
                <% end %>
                <% if category.uni_tutor %>
