              </ul>
            </ul>
          <% end %>

          <% if category.scholar_secondary || category.scholar_tertiary || category.scholar_bursaries || category.scholar_grants || category.scholar_events %>
            <ul>
              <li>Scholarship</li>
              <ul>
                <% if category.scholar_secondary %>
                  <li>Secondary Scholarships</li>
                <% end %>
                <% if category.scholar_tertiary %>
                  <li>Tertiary Scholarships</li>
                <% end %>
                <% if category.scholar_bursaries %>
                  <li>Bursaries</li>
                <% end %>
                <% if category.scholar_grants %>
                  <li>Grants</li>
                <% end %>
                <% if category.scholar_events %>
                  <li>Events</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if category.empl_intern || category.empl_cadet || category.empl_trainee || category.empl_jobs || category.empl_events %>
            <ul>
              <li>Employment</li>
              <ul>
                <% if category.empl_intern %>
                  <li>Internship</li>
                <% end %>
                <% if category.empl_cadet %>
                  <li>Cadetship</li>
                <% end %>
                <% if category.empl_trainee %>
                  <li>Traineeship</li>
                <% end %>
                <% if category.empl_jobs %>
                  <li>Jobs</li>
                <% end %>
                <% if category.empl_events %>
                  <li>Events</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <% if category.sector_conferences || category.sector_events %>
            <ul>
              <li>Sector</li>
              <ul>
                <% if category.sector_conferences %>
                  <li>Conferences</li>
                <% end %>
                <% if category.sector_events %>
                  <li>Events</li>
                <% end %>
              </ul>
            </ul>
          <% end %>

          <%= link_to "Edit Category", edit_category_path(category) %>
          <%= ' | '%>
          <%= link_to "Delete Category", category_path(category), method: :delete, data: { confirm: 'Are you sure?'} %>
        <% end %>
      <% end %>
    <% end %>
</p>

